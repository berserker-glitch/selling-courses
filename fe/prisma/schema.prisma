generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id                String   @id @default(uuid())
  studentId         String   @unique // For students, admin can set this. Admin can use 'ADMIN' or similar.
  password          String
  name              String
  role              String   @default("STUDENT") // "ADMIN", "STUDENT"
  deviceFingerprint String?  // The bound fingerprint for students
  isBanned          Boolean  @default(false)
  
  hasAcceptedTerms  Boolean  @default(false)
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  sessions Session[]
  logs     AuditLog[]
  courses  CourseEnrollment[]
}

model Session {
  id             String   @id @default(uuid())
  userId         String
  token          String   @unique
  fingerprint    String   // Fingerprint at time of login
  ipAddress      String
  userAgent      String
  expiresAt      DateTime
  createdAt      DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Course {
  id          String   @id @default(uuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  videos   Video[]
  students CourseEnrollment[]
}

model CourseEnrollment {
  userId   String
  courseId String
  assignedAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@id([userId, courseId])
}

model Video {
  id          String @id @default(uuid())
  title       String
  vdoCipherId String // 32-char ID from VdoCipher
  courseId    String
  duration    Int?   // seconds
  position    Int    @default(0) // Ordering

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String   // LOGIN, LOGOUT, WATCH_START, VIOLATION_DETECTED, BAN_USER, CREATE_USER
  details   String?
  ip        String?
  userAgent String?
  timestamp DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}
